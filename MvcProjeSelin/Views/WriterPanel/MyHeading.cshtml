@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{ string color = ""; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        /* Renk Değişkenleri */
        :root {
            --primary: #000000; /* Siyah */
            --secondary: #FFD700; /* Altın */
            --tertiary: #FFFFFF; /* Beyaz */
        }
        /* Temel Tipografi ve Arka Plan */
        body {
            background: var(--tertiary);
            font-family: 'Montserrat', sans-serif;
            color: var(--primary);
        }
        /* Kart Başlıkları */
        .card-header {
            background: var(--primary);
            color: var(--tertiary);
            border: none;
        }

        .card-title {
            font-weight: 700;
        }
        /* Tablo Başlıkları */
        table.table thead th {
            background: var(--primary);
            color: var(--tertiary);
            border: none;
        }

        table.table {
            border: none;
        }

            table.table tbody tr:hover {
                background-color: #f2f2f2;
            }
        /* Premium Badge */
        .badge-premium {
            background-color: var(--secondary);
            color: var(--primary);
            padding: 5px 10px;
            font-size: 0.9rem;
        }
        /* Buton Renkleri */
        .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            color: var(--tertiary);
        }

            .btn-primary:hover {
                background-color: #333333;
            }

        .btn-info {
            background-color: var(--secondary);
            border-color: var(--secondary);
            color: var(--primary);
        }

            .btn-info:hover {
                background-color: #e6c200;
            }

        .btn-danger {
            background-color: var(--primary);
            border-color: var(--primary);
            color: var(--tertiary);
            opacity: 0.85;
        }

            .btn-danger:hover {
                opacity: 1;
            }
        /* Buton Boyutlarını Küçült */
        .project-actions .btn {
            padding: 2px 6px;
            font-size: 0.75rem;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Sayfa Başlığı) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlıklar</h1>
                </div>
            </div>
        </div>
    </section>
    <!-- Main Content -->
    <section class="content">
        <!-- Kart -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Başlık Adı</th>
                            <th style="width: 15%">Oluşturan Yazar</th>
                            
                            <th style="width: 8%" class="text-center">Kategori</th>
                            <th style="width: 20%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // Tüm kategorilerde aynı premium badge kullanılıyor
                            color = "badge badge-premium";
                            <tr>
                                <td>@item.HeadingID</td>
                                <td>
                                    <a>@item.HeadingName</a>
                                    <br />
                                    <small>@(((DateTime)item.HeadingDate).ToString("dd.MMM.yyyy"))</small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/AdminLTE-3.0.4/dist/img/avatar.png">
                                        </li>
                                    </ul>
                                </td>
                                
                                <td class="project-state">
                                    <span class="@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/Content/ContentByHeading/@item.HeadingID">
                                        <i class="fas fa-folder"></i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingID">
                                        <i class="fas fa-pencil-alt"></i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@item.HeadingID">
                                        <i class="fas fa-trash"></i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
    <a href="/WriterPanel/NewHeading" class="btn btn-primary">Yeni Başlık Girişi</a>
</body>
</html>


