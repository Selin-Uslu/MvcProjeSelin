@using EntityLayer.Concrete
@model List<Category>

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <title>Kategori Listesi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Fonts: Montserrat & Playfair Display -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        /* Genel Sayfa Stilleri */
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 20px;
            /* Üç uyumlu mavi ton ile gradient arka plan */
            background: linear-gradient(135deg, #0d47a1, #1976d2, #42a5f5);
            background-size: 400% 400%;
            animation: gradientAnimation 15s ease infinite;
            color: #333;
        }

        @@keyframes gradientAnimation {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }
        /* Başlık Stilleri */
        h1 {
            font-family: 'Playfair Display', serif;
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 30px;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
        }
        /* Container Ayarları */
        .container {
            max-width: 900px;
            margin: auto;
            padding: 20px;
        }
        /* Tablo Genel Stilleri */
        .custom-table {
            background-color: rgba(255, 255, 255, 0.98);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            border: none;
        }

            .custom-table thead th {
                background: linear-gradient(45deg, #1976d2, #42a5f5);
                color: #fff;
                font-weight: 600;
                border: none;
                text-align: center;
                padding: 15px;
                text-transform: uppercase;
                letter-spacing: 1px;
                border-bottom: 3px solid rgba(255,255,255,0.5);
            }

            .custom-table tbody td {
                text-align: center;
                vertical-align: middle;
                font-weight: 500;
                border-top: 1px solid #eee;
                padding: 12px;
                transition: background-color 0.3s ease;
            }
            /* Tablo Satırları: İlk Yükleme Animasyonu */
            .custom-table tbody tr {
                opacity: 0;
                transform: translateY(20px);
                transition: transform 0.3s ease, opacity 0.3s ease;
            }

                .custom-table tbody tr.visible {
                    opacity: 1;
                    transform: translateY(0);
                }
                /* Satır Hover Efekti */
                .custom-table tbody tr:hover {
                    background-color: rgba(0, 0, 0, 0.05);
                    transform: translateY(-2px) scale(1.02);
                    transition: transform 0.2s ease, background-color 0.2s ease;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Kategori Listesi</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-hover custom-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Ad</th>
                        <th>Durum</th>
                        <th>Açıklama</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryStatus</td>
                            <td>@item.CategoryDescription</td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
        </div>
    </div>
    <!-- İsteğe Bağlı JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>// Sayfa yüklendiğinde tablo satırlarını sıralı şekilde görünür yapacak animasyon
        $(document).ready(function () {
            $('.custom-table tbody tr').each(function (i) {
                var row = $(this);
                setTimeout(function () {
                    row.addClass('visible');
                }, 150 * i);
            });
        });</script>
</body>
</html>
